<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.miiproyecto1.ui.fragments.HomeFragment"
        android:label="Inventario"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_addProductFragment"
            app:destination="@id/addProductFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/action_homeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>


    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.miiproyecto1.ui.fragments.AddProductFragment"
        android:label="Agregar Producto"
        tools:layout="@layout/fragment_add_product" />


    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.miiproyecto1.ui.fragments.ProductDetailFragment"
        android:label="Detalle del Producto"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="extra_product_id"
            app:argType="integer" />

        <action
            android:id="@+id/action_productDetailFragment_to_editProductFragment"
            app:destination="@id/editProductFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>


    <fragment
        android:id="@+id/editProductFragment"
        android:name="com.example.miiproyecto1.ui.fragments.EditProductFragment"
        android:label="Editar Producto"
        tools:layout="@layout/fragment_edit_product">

        <argument
            android:name="extra_product_id"
            app:argType="integer" />
    </fragment>

</navigation>
