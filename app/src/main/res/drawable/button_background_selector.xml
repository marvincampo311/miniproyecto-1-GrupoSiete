<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado Presionado (Presionado = Oscuro) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- NOTA: Se usa inventory_orange_dark para el estado presionado/feedback -->
            <solid android:color="@color/inventory_orange_dark" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/white" />
        </shape>
    </item>

    <!-- Estado por defecto (No presionado = Normal) -->
    <item>
        <shape android:shape="rectangle">
            <!-- NOTA: Se usa inventory_orange para el estado normal -->
            <solid android:color="@color/inventory_orange" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>